+static inline bool iter_has_nontrans_triggers(struct btree_iter *iter)
+{
+	return (BTREE_NODE_TYPE_HAS_TRIGGERS &
+		~BTREE_NODE_TYPE_HAS_TRANS_TRIGGERS) &
+		(1U << iter->btree_id);
+}
