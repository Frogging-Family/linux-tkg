+static void bch2_btree_iter_verify(struct btree_iter *iter)
+{
+	unsigned i;
+
+	bch2_btree_trans_verify_locks(iter->trans);
+
+	for (i = 0; i < BTREE_MAX_DEPTH; i++)
+		bch2_btree_iter_verify_level(iter, i);
+}
